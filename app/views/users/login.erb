<section id="page">
<h3>User Login In</h3><br/>
<!-- Print error message -->
<% if !!@error %>
  <div class="alert">
    <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
    <strong>Error!</strong> <%= @error %>
  </div>
<% end %>


  <form class="form" action="/login" method="post">
    <div class="input-field">
      <input type="text" name="user[username]" placeholder="username"  id="username">
      <label for="username">Username</label>
    </div>
    <br/>
    <div class="input-field">
      <input type="password" name="user[password]" placeholder="password"  id="password">
      <label for="password">Password</label>
    </div>
<br/>
    <div>
      <div style="float: left;"><input type="submit" value="login" class="button"></div>

    </div>

  </form>




</section>