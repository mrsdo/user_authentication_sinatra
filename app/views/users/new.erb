
<h3>Sign up as a new user</h3><br>
<!-- Display error message -->



<form class="form" action="/signup" method="POST">
  <% if !!@error %>
    <div style="background-color: #d85751; color: #ffffff; padding: 10px 5px 5px 5px;">
      <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
      <strong>Error!</strong> <%= @error %>
    </div>
  <% end %>
  <div class="field">
  <label for="fname" class="label-name" style="float: right;">First Name</label>
  <input type="text" id="fname" name="fname" maxlength="40" class="field-name" style="float: left;" />
  </div>

  <div class="field">
    <label for="fname" class="label-name" style="float: right;">Last Name</label>
    <input type="text" id="lname" name="fname" maxlength="40" class="field-name" style="float: left;"/>
  </div>

  <div class="field">
    <label for="email" class="label-name" style="float: right;">Email</label>
    <input type="text" id="email" name="email" maxlength="40" class="field-name" style="float: left;"/>
  </div>

  <div class="field">
    <label for="username" class="label-name" style="float: right;">Username</label>
    <input type="text" id="username" name="username" maxlength="40" class="field-name" style="float: left;"/>
  </div>

  <div class="field">
    <label for="password" class="label-name" style="float: right;">Password</label>
    <input type="text" id="password"  name="password" maxlength="40" class="field-name" style="float: left;"/>
  </div>
  <input type="submit" value="Add User" class="button" />

</form>
