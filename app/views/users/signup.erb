<h4>Create User Account</h4>

<form action="/signup" method="post">
  <div class="input-field">
    <input type="text" name="user[fname]" id="fname">
    <label for="fname">First Name</label>
  </div>
  <div class="input-field">
    <input type="text" name="user[lname]" id="lname">
    <label for="lname">Last Name</label>
  </div>
  <div class="input-field">
    <input type="text" name="user[email]" id="email">
    <label for="lname">Email</label>
  </div>
  <div class="input-field">
    <input type="text" name="user[username]" id="username">
    <label for="username">Username</label>
  </div>
  <div class="input-field">
    <input type="password" name="user[password]" id="password">
    <label for="password">Password</label>
  </div>

  <input type="submit" value="Signup" class="btn-small">
</form>